FROM python:3.9-slim

WORKDIR /app

# Install dependencies
# We need mlflow, pandas, scikit-learn (for the model), and fastapi/uvicorn (for the server)
RUN pip install --no-cache-dir \
    mlflow==2.14.1 \
    pandas \
    scikit-learn \
    fastapi \
    uvicorn \
    pydantic

# Copy the app code
COPY app/ /app/

# Expose the port
EXPOSE 8000

# Start the server
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]